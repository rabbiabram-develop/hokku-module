/**
* Проверяет, авторизован ли пользователь
* по идее, работает именно так.
*/
function hokku_are_user_auth() {
	global $user;
	if ($user->uid == 0){
		return true;
		}
		else{
			return false;
			}	
	}
/**
* Провяреят, есть ли на такой же ip как у пользователя
* данной сессии токен, подтверждающий что он уже добавлял
* хокку в течение дня.
*
*/	
function hokku_are_user_have_limit () {
	global $user;
	if (hokku_are_user_auth ()){
		return false;
		}
		else {
			$current_day = date ('d',time ());
			db_query("DELETE FROM {hokku_limit_tokens} WHERE date < %d ", $current_day);
			//Данный вопрос не выполняется, посколько в базе нет записей.
			$result = db_query ("SELECT ip FROM {hokku_limit_tokens}");
			$ip_arr = db_fetch_array ($result);
			if (!$ip_arr) {
				$ip_arr = array ();
				}
			if (in_array ($user->hostname,$ip_arr)){
				return true;
				}
			}	
	}
/**
* Создает "токен" для анонимных юзеров, добавивших хокку только что
*
*
*/
function hokku_get_limit_token(){
	global $user;
	$timestamp = date ('d',time ());
	$uip = $user->hostname;
	db_query("INSERT INTO {hokku_limit_tokens} (ip,date) VALUES ('%s',%d)", $uip,$timestamp);
	//Этот тоже не выполняется, что так же странно
	}
