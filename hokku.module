	global $user;
	if ($form_id == 'hokku_node_form'){	
		if (hokku_are_user_auth()){
			if (hokku_are_user_have_limit()){
				$form = array ();
				$form['warning'] = array (
				'#value' => t ('with your address @ip today has already been added citation'),
				array ('@ip'=> $user->hostname),
				'#weigth' => -6
				);
	
			}
		}	
	}
